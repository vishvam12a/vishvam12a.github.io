---
const experiences = [
  {
    title: "Digital Forensics Intern",
    company: "CID CRIME GUJARAT POLICE",
    logo: "/cid-gujarat-police-logo.jpg",
    period: "Nov 2024 â€“ May 2025",
    responsibilities: [
      "* Conducted forensic investigations on digital devices, including mobile phones, computers, and storage media.",
      "* Performed APK analysis and reverse engineering to extract critical evidence from Android applications.",
      "* Utilized forensic tools such as UFED, FTK Imager, and Autopsy for data recovery and analysis.",
      "* Conducted malware reverse engineering to identify and analyze malicious code.",
      "* Assisted in building web portals and tools for law enforcement agencies to streamline investigations.",
      "* Documented findings and prepared forensic reports to aid in cyber crime investigations."
    ]
  }
];
---

<section id="experience" class="py-20 bg-gray-50 dark:bg-gray-800">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="text-center mb-16">
      <h2 class="text-3xl md:text-4xl font-bold text-gray-900 dark:text-white mb-4" data-aos="fade-up">Work Experience</h2>
      <div class="w-20 h-1 bg-primary-500 mx-auto mb-8" data-aos="fade-up" data-aos-delay="100"></div>
    </div>
    
    <div class="relative">
      <!-- Timeline Line -->
      <div class="absolute left-0 md:left-1/2 transform md:-translate-x-1/2 h-full w-1 bg-gray-300 dark:bg-gray-600"></div>
      
      {experiences.map((experience, index) => (
        <div class="relative mb-16 last:mb-0" data-aos="fade-up" data-aos-delay={index * 100}>
          <!-- Timeline Dot -->
          <div class="absolute left-0 md:left-1/2 transform -translate-x-1/2 w-5 h-5 rounded-full bg-primary-500 z-10 mt-4"></div>
          
          <!-- Timeline Content -->
          <div class="ml-10 md:ml-0 md:w-5/12 md:float-left md:pr-8 md:text-right">
            <div class="p-6 bg-white dark:bg-gray-900 rounded-lg shadow-md">
              <div class="flex items-center justify-between gap-4">
                {experience.logo && (
                  <img 
                    src={experience.logo} 
                    alt="Company Logo" 
                    class="w-24 h-24 object-contain"
                    width="96"
                    height="96"
                  />
                )}
                <div class="flex-1 text-right">
                  <h3 class="text-xl font-bold text-gray-900 dark:text-white">{experience.title}</h3>
                  <p class="text-primary-600 dark:text-primary-400 font-medium mt-1">{experience.company}</p>
                  <p class="text-gray-500 dark:text-gray-400">{experience.period}</p>
                </div>
              </div>
              
              <ul class="list-disc text-gray-600 dark:text-gray-300 space-y-2 ml-5 md:ml-0 md:list-none mt-4">
                {experience.responsibilities.map(responsibility => (
                  <li class="text-left">{responsibility}</li>
                ))}
              </ul>
            </div>
          </div>
          
          <div class="clear-both"></div>
        </div>
      ))}
    </div>
  </div>
</section>