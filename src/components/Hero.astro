---
import { Image } from 'astro:assets';

const profileImageUrl = "/Profile.JPG"; // Using local image from public folder
---

<section class="relative min-h-screen bg-gradient-to-b from-gray-50 to-gray-100 dark:from-gray-900 dark:to-gray-800 bg-grid overflow-hidden">
  <div class="absolute inset-0 z-0 overflow-hidden">
    <div class="absolute bottom-0 left-0 right-0 top-0 bg-[linear-gradient(to_right,#4f4f4f2e_1px,transparent_1px),linear-gradient(to_bottom,#4f4f4f2e_1px,transparent_1px)] bg-[size:14px_24px] [mask-image:radial-gradient(ellipse_60%_50%_at_50%_0%,#000_70%,transparent_100%)]"></div>
  </div>
  
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 pt-32 pb-16 relative z-10">
    <div class="flex flex-col lg:flex-row items-center gap-12">
      <div class="flex-1 text-center lg:text-left" data-aos="fade-right">
        <span class="inline-block px-3 py-1 text-sm font-medium text-primary-700 dark:text-primary-400 bg-primary-100 dark:bg-primary-900/30 rounded-full mb-4">
          Cybersecurity Specialist
        </span>
        <h1 class="text-4xl md:text-5xl lg:text-6xl font-bold tracking-tight text-gray-900 dark:text-white mb-6">
          <span class="block">Vishvam J. Joshi</span>
          <span class="block mt-2 text-2xl md:text-3xl lg:text-4xl text-primary-600 dark:text-primary-400">Securing Digital Frontiers</span>
        </h1>
        <p class="text-lg md:text-xl text-gray-600 dark:text-gray-300 max-w-2xl mx-auto lg:mx-0 mb-8">
          Certified Cybersecurity Technician with expertise in digital forensics, SOC analysis, and vulnerability assessment. Building tools that enhance cyber resilience.
        </p>
        <div class="flex flex-wrap gap-4 justify-center lg:justify-start">
          <a href="#projects" class="px-6 py-3 text-base font-medium text-white bg-primary-600 hover:bg-primary-700 rounded-lg shadow-md hover:shadow-lg transition-all">
            View Projects
          </a>
          <a href="#contact" class="px-6 py-3 text-base font-medium text-primary-600 dark:text-primary-400 bg-white dark:bg-gray-800 hover:bg-gray-100 dark:hover:bg-gray-700 border border-primary-600 dark:border-primary-500 rounded-lg shadow-md hover:shadow-lg transition-all">
            Contact Me
          </a>
          <a 
            href="/resume.pdf" 
            download
            class="px-6 py-3 text-base font-medium text-white bg-accent-600 hover:bg-accent-700 rounded-lg shadow-md hover:shadow-lg transition-all flex items-center gap-2"
          >
            Download Resume
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-4l-4 4m0 0l-4-4m4 4V4"></path>
            </svg>
          </a>
        </div>
        
        <div class="mt-8 flex items-center justify-center lg:justify-start space-x-5">
          <a href="https://www.linkedin.com/in/vishvam-j-joshi" target="_blank" rel="noopener noreferrer" class="text-gray-600 hover:text-primary-600 dark:text-gray-400 dark:hover:text-primary-400">
            <span class="sr-only">LinkedIn</span>
            <svg class="h-6 w-6" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
              <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
            </svg>
          </a>
          <a href="https://github.com/vishvam12a" target="_blank" rel="noopener noreferrer" class="text-gray-600 hover:text-primary-600 dark:text-gray-400 dark:hover:text-primary-400">
            <span class="sr-only">GitHub</span>
            <svg class="h-6 w-6" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
              <path fill-rule="evenodd" d="M12 2C6.477 2 2 6.484 2 12.017c0 4.425 2.865 8.18 6.839 9.504.5.092.682-.217.682-.483 0-.237-.008-.868-.013-1.703-2.782.605-3.369-1.343-3.369-1.343-.454-1.158-1.11-1.466-1.11-1.466-.908-.62.069-.608.069-.608 1.003.07 1.531 1.032 1.531 1.032.892 1.53 2.341 1.088 2.91.832.092-.647.35-1.088.636-1.338-2.22-.253-4.555-1.113-4.555-4.951 0-1.093.39-1.988 1.029-2.688-.103-.253-.446-1.272.098-2.65 0 0 .84-.27 2.75 1.026A9.564 9.564 0 0112 6.844c.85.004 1.705.115 2.504.337 1.909-1.296 2.747-1.027 2.747-1.027.546 1.379.202 2.398.1 2.651.64.7 1.028 1.595 1.028 2.688 0 3.848-2.339 4.695-4.566 4.943.359.309.678.92.678 1.855 0 1.338-.012 2.419-.012 2.747 0 .268.18.58.688.482A10.019 10.019 0 0022 12.017C22 6.484 17.522 2 12 2z" clip-rule="evenodd"></path>
            </svg>
          </a>
          <a href="mailto:vjjoshi2005@gmail.com" class="text-gray-600 hover:text-primary-600 dark:text-gray-400 dark:hover:text-primary-400">
            <span class="sr-only">Email</span>
            <svg class="h-6 w-6" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
              <path d="M1.5 8.67v8.58a3 3 0 003 3h15a3 3 0 003-3V8.67l-8.928 5.493a3 3 0 01-3.144 0L1.5 8.67z" />
              <path d="M22.5 6.908V6.75a3 3 0 00-3-3h-15a3 3 0 00-3 3v.158l9.714 5.978a1.5 1.5 0 001.572 0L22.5 6.908z" />
            </svg>
          </a>
        </div>
      </div>
      
      <div class="flex-1 flex justify-center lg:justify-end" data-aos="fade-left">
        <div class="relative w-64 h-64 md:w-80 md:h-80 lg:w-96 lg:h-96 rounded-2xl overflow-hidden shadow-2xl transform transition-all duration-500 hover:scale-105">
          <div class="absolute inset-0 bg-gradient-to-l from-transparent to-black/20 z-10"></div>
          <img 
            src={profileImageUrl} 
            alt="Vishvam J. Joshi" 
            class="w-full h-full object-cover"
            style="aspect-ratio: 1"
            width="384"
            height="384"
          />
        </div>
      </div>
    </div>
    
    <!-- Scroll indicator -->
    <div class="absolute bottom-12 left-1/2 transform -translate-x-1/2 flex flex-col items-center">
      <span class="text-sm text-gray-600 dark:text-gray-400 mb-2">Scroll Down</span>
      <div class="w-6 h-10 border-2 border-gray-600 dark:border-gray-400 rounded-full flex justify-center">
        <div class="w-1.5 h-3 bg-gray-600 dark:bg-gray-400 rounded-full mt-2 animate-bounce"></div>
      </div>
    </div>
  </div>
</section>